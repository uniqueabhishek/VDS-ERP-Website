{
    "name": "vds-erp",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "set NODE_OPTIONS=--max-old-space-size=4096 && next dev",
        "dev:turbo": "set NODE_OPTIONS=--max-old-space-size=4096 && next dev --turbo",
        "build": "prisma generate && prisma db push --accept-data-loss && prisma db seed && next build",
        "vercel-build": "prisma generate && node scripts/push-schema.mjs && next build",
        "start": "next start",
        "lint": "next lint",
        "db:studio": "prisma studio",
        "db:push": "prisma db push",
        "db:seed": "prisma db seed",
        "db:generate": "prisma generate"
    },
    "dependencies": {
        "@auth/prisma-adapter": "^2.11.1",
        "@libsql/client": "^0.17.0",
        "@prisma/adapter-libsql": "^6.19.2",
        "@prisma/client": "^6.19.2",
        "bcryptjs": "^3.0.3",
        "next": "^16.1.4",
        "next-auth": "^4.24.13",
        "prisma": "^6.19.2",
        "react": "^19.2.3",
        "react-dom": "^19.2.3",
        "zod": "^4.3.5"
    },
    "devDependencies": {
        "@tailwindcss/container-queries": "^0.1.1",
        "@tailwindcss/forms": "^0.5.7",
        "@tailwindcss/postcss": "^4.1.18",
        "@types/bcryptjs": "^2.4.6",
        "@types/node": "^25.0.10",
        "@types/react": "^19.2.9",
        "@types/react-dom": "^19.2.3",
        "autoprefixer": "^10.0.0",
        "eslint": "^9.39.2",
        "eslint-config-next": "^16.1.4",
        "postcss": "^8",
        "tailwindcss": "^4.1.18",
        "ts-node": "^10.9.2",
        "typescript": "^5"
    },
    "prisma": {
        "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
    }
}
